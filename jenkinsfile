pipeline {
    agent any

    stages {
        stage('Setup venv') {
            steps {
                sh '''
                python3 -m venv venv
                venv/bin/python -m pip install requests
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                venv/bin/python api.py
                '''
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline successful!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
